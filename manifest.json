{
  "manifest_version": 3,
  "name": "Read Aloud Pro",
  "version": "1.0",
  "description": "Reads aloud selected text with controls and voice settings.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Read Aloud Pro"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
